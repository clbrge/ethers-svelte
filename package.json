{
  "name": "ethers-svelte",
  "version": "3.2.0",
  "description": "Ethers.js library as a collection of stores for Svelte or SvelteKit & related UX components.",
  "author": {
    "name": "Christophe Le Bars",
    "email": "<clb@toort.net>"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": "clbrge/ethers-svelte",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "svelte": "src/stores.js",
  "types": "dist/ethers-svelte.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "main": "./dist/index.cjs",
      "module": "./dist/index.mjs",
      "svelte": "./src/stores.js",
      "types": "./dist/ethers-svelte.d.ts"
    },
    "./components": {
      "import": "./src/components/index.js",
      "svelte": "./src/components/index.js"
    }
  },
  "scripts": {
    "update-chains": "node ./scripts/update-chains.mjs",
    "format": "prettier --plugin-search-dir . --write .",
    "build": "rollup -c"
  },
  "dependencies": {
    "@metamask/jazzicon": "^2.0.0",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "6.x",
    "svelte": ">4.0",
    "svelte-proxied-store": "^2.0.4"
  },
  "devDependencies": {
    "ethers": "^6.8.1",
    "prettier-config-standard": "^7.0.0",
    "lint-staged": "^15.0.2",
    "release-it": "^16.2.1",
    "rollup": "4.3.0",
    "rollup-plugin-dts": "^6.1.0",
    "svelte": "^4.2.2"
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write"
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "sveltekit",
    "svelte",
    "sapper",
    "ethereum",
    "ethers",
    "store"
  ],
  "files": [
    "src",
    "dist"
  ]
}
